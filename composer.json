{
    "name": "palak-rajput/laravel-data-encryption",
    "description": "Encrypt sensitive data while maintaining searchability with Meilisearch",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "Your Name",
        "email": "your@email.com"
    }],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0",
        "ext-openssl": "*",
        "meilisearch/meilisearch-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "PalakRajput\\DataEncryption\\": "src/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "PalakRajput\\DataEncryption\\ComposerScripts::postInstall"
        ],
        "post-update-cmd": [
            "PalakRajput\\DataEncryption\\ComposerScripts::postUpdate"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "PalakRajput\\DataEncryption\\Providers\\DataEncryptionServiceProvider"
            ],
            "aliases": {
                "DataEncryption": "PalakRajput\\DataEncryption\\Facades\\DataEncryption"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}