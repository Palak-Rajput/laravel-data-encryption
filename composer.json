{
    "name": "palak-rajput/laravel-data-encryption",
    "description": "Encrypt sensitive data while maintaining searchability with Meilisearch - Compatible with Laravel 6.x to 11.x",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Palak Rajput",
            "email": "palak@example.com"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0",
        "ext-openssl": "*",
        "meilisearch/meilisearch-php": "^0.19.0|^0.20.0|^0.21.0|^0.22.0|^0.23.0|^0.24.0|^0.25.0|^1.0",
        "illuminate/support": "^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/database": "^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/console": "^6.0|^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/encryption": "^6.0|^7.0|^8.0|^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.0|^10.0",
        "orchestra/testbench": "^4.0|^5.0|^6.0|^7.0|^8.0",
        "mockery/mockery": "^1.3|^1.4|^1.5"
    },
    "suggest": {
        "laravel/framework": "Required for full Laravel integration",
        "ext-sodium": "For better encryption performance"
    },
    "autoload": {
        "psr-4": {
            "PalakRajput\\DataEncryption\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PalakRajput\\DataEncryption\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php -r \"if (class_exists('Illuminate\\Foundation\\PackageManifest')) { Illuminate\\Foundation\\PackageManifest::build(); }\""
        ],
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "PalakRajput\\DataEncryption\\Providers\\DataEncryptionServiceProvider"
            ],
            "aliases": {
                "DataEncryption": "PalakRajput\\DataEncryption\\Facades\\DataEncryption"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}